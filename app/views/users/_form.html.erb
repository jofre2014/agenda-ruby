<%= form_for user, remote: true, :authenticity_token => true do |f| %>
<%= hidden_field_tag 'unpais', @unpais %>
<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label :apellido %>
    <%= f.text_field :apellido %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :activo %>
    <%= f.check_box :activo %>
  </div>

  <div class="field">
    <%= f.label :edad %>
    <%= f.number_field :edad %>
  </div>

  <div class="field">
    <%= f.label :detalles %>
    <%= f.text_area :detalles %>
  </div>
  <div class="field">
    <%= f.label 'Telefono Fijo' %>
    <%= text_field_tag :tel_fijo %>
  </div>
  <div class="field">
    <%= f.label 'Telefono Celular' %>
    <%= text_field_tag :tel_celular %>
  </div>
  <div class="field">
    <%= f.label 'Telefono Laboral' %>
    <%= text_field_tag :tel_laboral %>
  </div>
  <div class="field">
    <%= f.label 'Pais' %><br />
    <%= select_tag "pais_elegido", options_from_collection_for_select(Country.order(:pais), "id", "pais", @unpais), {:onchange => "this.form.submit();"} %>
  </div>
  <div class="field">
    <%= f.label 'Provincia' %><br />
    <%= f.collection_select :province_id, Province.where(country_id: @unpais), :id, :provincia, {:selected => 108} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>
