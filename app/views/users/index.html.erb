<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Activo</th>
      <th>Edad</th>
      <th>Detalles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.apellido %></td>
        <td><%= user.email %></td>
        <td><%= user.activo %></td>
        <td><%= user.edad %></td>
        <td><%= user.detalles %></td>
        <td><%= link_to image_tag('Search.png'), user %> </td>
        <td><%= link_to image_tag('Modify.png'), edit_user_path(user) %></td> 
        <td><%= link_to image_tag('Delete.png'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

